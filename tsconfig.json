{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["src/types", "./node_modules/@types"],
    "types": ["node", "express"],
  },
  "include": ["src"]
}
